{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["src/cli/src/**/*", "src/models/**/*", "src/engine/src/**/*"],
  "exclude": [ "**/*.test.ts", "**/*.test.tsx" ],
  "compilerOptions": {
    "module": "commonjs",
    "composite": true,
    "downlevelIteration": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
