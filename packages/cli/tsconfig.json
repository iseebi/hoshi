{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "include": ["src"],
  "compilerOptions": {
    "module": "commonjs",
    "composite": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "hoshi-models": ["../models/src"],
      "hoshi-core": ["../core/src"]
    }
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "esm": false,
    "transpileOnly": true
  },
  "references": [{ "path": "../models" }, { "path": "../core" }]
}
