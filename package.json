{
  "name": "hoshi",
  "version": "0.5.1",
  "description": "Simple translation management software",
  "main": "./out/main/index.js",
  "author": "Nobuhiro Ito",
  "homepage": "https://hoshi.iseteki.net",
  "scripts": {
    "test": "jest",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "cli": "ts-node --project tsconfig.cli.json src/cli/src/index.ts",
    "build": "run-s build:cli build:electron",
    "build:electron": "npm run typecheck && electron-vite build",
    "build:cli": "sh build/cli_build.sh",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "build:cli-package": "sh build/cli_package.sh"
  },
  "dependencies": {
    "@adobe/react-spectrum": "^3.31.1",
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@reduxjs/toolkit": "^1.9.7",
    "@spectrum-icons/workflow": "^4.2.6",
    "@vitejs/plugin-react": "^4.0.4",
    "commander": "^11.1.0",
    "electron-updater": "^6.1.1",
    "electron-vite": "^1.0.27",
    "formik": "^2.4.5",
    "react": "^18.2.0",
    "react-data-grid": "^7.0.0-beta.40",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.2.3",
    "typed-redux-saga": "^1.5.0",
    "typescript-fsa": "^3.0.0",
    "typescript-fsa-reducers": "^1.2.2",
    "typescript-fsa-redux-saga": "^2.0.0",
    "yaml": "^2.3.4",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^1.0.1",
    "@electron-toolkit/eslint-config-ts": "^1.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.18.9",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/redux-logger": "^3.0.11",
    "electron": "^28.2.9",
    "electron-builder": "^24.13.3",
    "eslint": "^8.47.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.8.1",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6",
    "vite": "^4.5.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "overrides": {
    "@electron/notarize": "2.3.2"
  }
}
